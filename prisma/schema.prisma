// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// The Business Owner (Our customer)
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Stripe Connect integration
  stripeConnectId String?   @unique

  accounts      Account[]
  sessions      Session[]
  customers     Customer[]
  recoveries    Recovery[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Their Customer (The one whose card failed)
model Customer {
  id              String    @id @default(cuid())
  stripeCustomerId String   @unique
  email           String
  name            String?
  
  // Link to the business owner
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  recoveries      Recovery[]
  createdAt       DateTime  @default(now())
}

// A payment failure and recovery attempt
model Recovery {
  id              String    @id @default(cuid())
  status          String    @default("PENDING") // PENDING, RECOVERED, FAILED
  amount          Int       // Amount in cents
  currency        String    @default("usd")
  
  stripeInvoiceId String    @unique // The invoice that failed
  stripePaymentIntentId String? 
  
  // Relations
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  customerId      String
  customer        Customer  @relation(fields: [customerId], references: [id], onDelete: Cascade)

  // Tracking
  emailsSent      Int       @default(0)
  nextRetryDate   DateTime?
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}
